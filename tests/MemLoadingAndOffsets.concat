macro getPtr // ptr index -- ptr
    4 * +
endmacro

macro getPtrRev // ptr index -- ptr
    4 * swap 4 - swap -
endmacro

mem bit20 4 20 * endmem // 4 Bytes
mem bit20end 0 endmem

cr
bit20 print cr
bit20end print cr
cr

0 while dup 20 < do
    dup 1 + dup *
    over bit20 swap getPtr swap !
    1 +
